# ===================================
# SERVER ENVIRONMENT VARIABLES
# ===================================

# Server Configuration
NODE_ENV=development
PORT=5001

# Database Configuration
# Replace <username>, <password>, and <cluster-url> with your actual MongoDB credentials
MONGO_URL=mongodb+srv://<username>:<password>@<cluster-url>/<database-name>?retryWrites=true&w=majority

# For local MongoDB installation:
# MONGO_URL=mongodb://localhost:27017/admin-dashboard

# JWT Secret (generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-here

# API Configuration
API_VERSION=v1

# CORS Configuration (optional)
CORS_ORIGIN=http://localhost:3000

# Email Configuration (optional)
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-password

# File Upload Configuration (optional)
MAX_FILE_SIZE=5000000
UPLOAD_PATH=./uploads

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
